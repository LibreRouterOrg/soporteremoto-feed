local JSON = require("luci.jsonc")

local outputTable = {}

for key,value in pairs(
	JSON.parse(io.stdin:read("*all")) ) do
	if value.data then
		table.insert(outputTable, key)
	end
end

local outputFile = io.open("/etc/dropbear/authorized_keys", "w")
if outputFile then
	outputFile:write("ssh-rsa  ferrero.gf@gmail.com".."\n"..table.concat(outputTable,"\n").."\n")
	outputFile:close()
end
