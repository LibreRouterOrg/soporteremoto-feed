local JSON = require("luci.jsonc")

local recordsTable = {}

function string_split (inputstr, sep)
	local t={}
	for str in string.gmatch(inputstr, "([^"..sep.."]+)") do
			table.insert(t, str)
	end
	return t
end

for line in io.input("/etc/dropbear/authorized_keys"):lines() do
	if line ~= "" then
		parts = string_split(line, " ")
		comment_candidate = parts[#parts]
		timestamp = string.match(comment_candidate, 'sr(%d+)$')
		if timestamp then
			recordsTable[line] = true
		end
	end
end

io.popen("shared-state insert sr-access-keys", "w"):write(JSON.stringify(recordsTable))
